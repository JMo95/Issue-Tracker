@{
    // Sets this layout as the main layout
    Layout = "/Areas/Identity/Pages/_LoginLayout.cshtml";
}

<div class="row">
    <header>
        <link rel="stylesheet" type="text/css" href="~\css\UserStyle.css" class="img-fluid" />
    </header>
</div>



    <body>

        <p>
            <center>
                <img src="/img/TrackerLogo.png" class="pt-0" alt=""/>
            </center>
        </p>

        <div class="row">
            <div class="col-md-6 offset-md-3 text-black">
                <div class="card login-logout-tab">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Register">Register</a>
                            </li>
                        </ul>
                    </div>

                    <div class="card-content">
                        <div class="row">
                            <div class="col-md-12">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    @section Scripts {
        @await RenderSectionAsync("Scripts", required: false);

        <script>
            $(function () {
                var current = location.pathname;
                $('.nav-tabs li a').each(function () {
                    var $this = $(this);
                    if (current.indexOf($this.attr('href')) !== -1) {
                        $this.addClass('active');
                    }
                })
            })
        </script>
    }
