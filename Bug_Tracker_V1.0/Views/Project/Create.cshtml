@model Bug_Tracker_V1._0.ViewModels.ProjectViewModels.IndexViewModel

    <link rel="stylesheet" href="~/css/Projects.css">

    <form method="post" asp-action="Create">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Add Item</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    @* Column Headers *@
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="NewProjectName"></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="NewProjectDescription"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <input asp-for="NewProjectName" class="form-control rounded-0" />
                            <span asp-validation-for="NewProjectName" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <input asp-for="NewProjectDescription" class="form-control rounded-0" />
                            <span asp-validation-for="NewProjectDescription" class="text-danger"></span>
                        </div>
                    </div>
                            <br />
                    <div class="form-group row">
                        <div class="col-8 z-2 row">
                            <div class="col">
                                <input type="submit" class="btn bg-purple w-75 rounded-0" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn bg-test w-75 rounded-0">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>

    @section Scripts
{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }